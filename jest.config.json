{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": ["<rootDir>/test/jest-config.setup.ts"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!**/node_modules/**",
    "!src/application/common/**/*",
    "!**/tests/**"
  ],
  "coveragePathIgnorePatterns": [
    "\\.module\\.ts$",
    "\\.entity\\.ts$",
    "\\.dto\\.ts$",
    "\\.config\\.ts$",
    "\\endpoint\\.ts$",
    "/infrastructure/db/migration/"
  ]
}
